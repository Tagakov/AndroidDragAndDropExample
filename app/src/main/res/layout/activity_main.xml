<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.rma.androiddraganddropexample.MainActivity">

    <Button
        android:id="@+id/btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Linear Layout Manager"
        android:gravity="center_vertical|start"/>

    <Button
        android:id="@+id/btn_linearDiff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_linear"
        android:onClick="onClick"
        android:text="Linear Layout Manager Diff"
        android:gravity="center_vertical|start"/>

    <Button
        android:id="@+id/btn_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_linearDiff"
        android:onClick="onClick"
        android:text="Grid Layout Manager"
        android:gravity="center_vertical|start"/>

    <Button
        android:id="@+id/btn_gridDiff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_grid"
        android:onClick="onClick"
        android:text="Grid Layout Manager Diff"
        android:gravity="center_vertical|start"/>

    <Button
        android:id="@+id/btn_staggeredGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_gridDiff"
        android:onClick="onClick"
        android:text="Staggered Grid Layout Manager"
        android:gravity="center_vertical|start"/>

    <Button
        android:id="@+id/btn_staggeredGridDiff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_staggeredGrid"
        android:onClick="onClick"
        android:text="Staggered Grid Layout Manager Diff"
        android:gravity="center_vertical|start"/>
</RelativeLayout>
